@model Dastone.Models.RelatedVehiclesViewModel

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Araç ID</th>
                <th>Araç Adı</th>
                <th>Mevcut Tip</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model.RelatedVehicles)
            {
                <tr data-vehicle-id="@vehicle.AracID">
                    <td>@vehicle.AracID</td>
                    <td>@(vehicle.Plaka ?? "Araç " + vehicle.AracID)</td>
                    <td>@(vehicle.AracTipiTanimi?.AracTipiName ?? "Yok")</td>
                    <td>
                        <select class="form-select new-type-select">
                            <option value="">Sıfırla (Null Yap)</option>
                            @foreach (var type in Model.AllVehicleTypes)
                            {
                                <option value="@type.AracTipiID">@type.AracTipiName</option>
                            }
                        </select>
                        <button class="btn btn-sm btn-primary update-type-btn">Değiştir/Sıfırla</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>