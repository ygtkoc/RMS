@model Dastone.Models.CezaTanimi

<form id="createPenaltyDefinitionForm" asp-action="CreatePenaltyDefinition" asp-controller="Parameters" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="CezaKodu" class="form-label">Ceza Kodu</label>
        <input asp-for="CezaKodu" type="text" class="form-control" />
        <span asp-validation-for="CezaKodu" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="KisaAciklama" class="form-label">Kısa Açıklama</label>
        <input asp-for="KisaAciklama" type="text" class="form-control" />
        <span asp-validation-for="KisaAciklama" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UzunAciklama" class="form-label">Uzun Açıklama</label>
        <textarea asp-for="UzunAciklama" class="form-control" rows="3"></textarea>
        <span asp-validation-for="UzunAciklama" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ceza Tanımı Oluştur</button>
    <div class="mt-3 form-message"></div>
</form>

<script>
    (function() {
        console.log('_CreatePenaltyDefinitionFormPartial.cshtml loaded');
        // Clear validation messages when input changes
        $('#createPenaltyDefinitionForm input, #createPenaltyDefinitionForm textarea').on('keyup change', function() {
            const inputName = $(this).attr('name');
            $(`span[data-valmsg-for="${inputName}"]`).text('');
        });
    })();
</script>