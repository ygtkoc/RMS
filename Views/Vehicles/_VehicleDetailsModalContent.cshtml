@* Views/Shared/_VehicleDetailsModalContent.cshtml *@
@model Dastone.Models.Vehicle

@{
    ViewData["Title"] = "Araç Detayları";
}

<div class="modal-body p-4">
    @* Modal içeriğine padding ekleyelim *@
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-tabs custom-tabs" id="vehicleDetailTabs" role="tablist">
                @* Özel stil için custom-tabs *@
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="genelBilgiler-tab" data-bs-toggle="tab" href="#genelBilgiler" role="tab" aria-controls="genelBilgiler" aria-selected="true">Genel Bilgiler</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="cezalar-tab" data-bs-toggle="tab" href="#cezalar" role="tab" aria-controls="cezalar" aria-selected="false">Cezalar</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="otoyolGecisler-tab" data-bs-toggle="tab" href="#otoyolGecisler" role="tab" aria-controls="otoyolGecisler" aria-selected="false">Otoyol Geçişleri</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="gecmisMusteriler-tab" data-bs-toggle="tab" href="#gecmisMusteriler" role="tab" aria-controls="gecmisMusteriler" aria-selected="false">Geçmiş Müşteriler</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="guncelle-tab" data-bs-toggle="tab" href="#guncelle" role="tab" aria-controls="guncelle" aria-selected="false">Araç Bilgilerini Güncelle</a>
                </li>
            </ul>
            <div class="tab-content pt-3" id="vehicleDetailTabsContent">
                <div class="tab-pane fade show active" id="genelBilgiler" role="tabpanel" aria-labelledby="genelBilgiler-tab">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            @* Küçük ekranlarda tam genişlik *@
                            <dl class="row detail-list">
                                @* Bootstrap'ın description list yapısını kullanalım *@
                                <dt class="col-sm-5">Plaka:</dt>
                                <dd class="col-sm-7"><span class="value-highlight">@Html.DisplayFor(model => model.Plaka)</span></dd>

                                <dt class="col-sm-5">Şasi No:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.SaseNo)</dd>

                                <dt class="col-sm-5">Marka:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Marka)</dd>

                                <dt class="col-sm-5">Model:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Model)</dd>

                                <dt class="col-sm-5">Model Yılı:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.ModelYili)</dd>

                                <dt class="col-sm-5">Trafik Başlangıç:</dt>
                                <dd class="col-sm-7">@(Model.TrafikBaslangicTarihi.HasValue ? Model.TrafikBaslangicTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</dd>

                                <dt class="col-sm-5">Trafik Bitiş:</dt>
                                <dd class="col-sm-7">@(Model.TrafikBitisTarihi.HasValue ? Model.TrafikBitisTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</dd>

                                <dt class="col-sm-5">Trafik Belgesi:</dt>
                                <dd class="col-sm-7">
                                    @(string.IsNullOrEmpty(Model.TrafikBelgesi) ? "Belirtilmemiş" : Html.Raw($"<a href='{Url.Content(Model.TrafikBelgesi)}' target='_blank' class='btn btn-sm btn-info'><i class='ri-file-text-line'></i> Görüntüle</a>"))
                                </dd>
                                <dt class="col-sm-5">Yakıt Tipi:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.YakitTipi)</dd>
                                <dt class="col-sm-5">Vites Tipi:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.VitesTipi)</dd>
                                <dt class="col-sm-5">Kilometre Bilgi:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.KMBilgi)</dd>
                                <dt class="col-sm-5">Çekiş Tipi:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.CekisTipi)</dd>
                                <dt class="col-sm-5">Renk:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Renk)</dd>
                                <dt class="col-sm-5">Motor Gücü:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.MotorGucu)</dd>
                                <dt class="col-sm-5">Araç Tipi:</dt>
                                <dd class="col-sm-7">@(Model.AracTipiTanimi != null ? Model.AracTipiTanimi.AracTipiName : "Belirtilmemiş")</dd>
                                <dt class="col-sm-5">Kabis ID:</dt>
                                <dd class="col-sm-7">@(Model.KabisID != null ? $"{Model.KabisID}" : "Belirtilmemiş")</dd>
                                <dt class="col-sm-5">Kabis Giriş Tarihi:</dt>
                                <dd class="col-sm-7">@(Model.KabisGirisTarihi.HasValue ? Model.KabisGirisTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</dd> @* Para birimi formatı *@
                            </dl>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            @* Küçük ekranlarda tam genişlik *@
                            <dl class="row detail-list">
                                <dt class="col-sm-5">Kiralama Bedeli:</dt>
                                <dd class="col-sm-7">@(Model.KiralamaBedeli.HasValue ? $"{Model.KiralamaBedeli.Value:N2} TL" : "Belirtilmemiş")</dd> @* Para birimi formatı *@

                                <dt class="col-sm-5">Durum:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Durum)</dd>

                                <dt class="col-sm-5">Lokasyon:</dt>
                                <dd class="col-sm-7">@(Model.Lokasyon != null ? Model.Lokasyon.LokasyonAdi : "Belirtilmemiş")</dd>

                                <dt class="col-sm-5">Aktif Müşteri:</dt>
                                <dd class="col-sm-7">@(Model.AktifMusteri != null ? $"{Model.AktifMusteri.DEFINITION_}" : "Yok")</dd>

                                <dt class="col-sm-5">Tescil Tarihi:</dt>
                                <dd class="col-sm-7">@(Model.TescilTarihi.HasValue ? Model.TescilTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</dd>

                                <dt class="col-sm-5">Kasko Başlangıç:</dt>
                                <dd class="col-sm-7">@(Model.KaskoBaslangicTarihi.HasValue ? Model.KaskoBaslangicTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</dd>

                                <dt class="col-sm-5">Kasko Bitiş:</dt>
                                <dd class="col-sm-7">@(Model.KaskoBitisTarihi.HasValue ? Model.KaskoBitisTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</dd>

                                <dt class="col-sm-5">Kasko Belgesi:</dt>
                                <dd class="col-sm-7">
                                    @(string.IsNullOrEmpty(Model.KaskoBelgesi) ? "Belirtilmemiş" : Html.Raw($"<a href='{Url.Content(Model.KaskoBelgesi)}' target='_blank' class='btn btn-sm btn-info'><i class='ri-file-text-line'></i> Görüntüle</a>"))
                                </dd>

                                <dt class="col-sm-5">MTV1 Belgesi:</dt>
                                <dd class="col-sm-7">
                                    @(string.IsNullOrEmpty(Model.MTV1Belgesi) ? "Belirtilmemiş" : Html.Raw($"<a href='{Url.Content(Model.MTV1Belgesi)}' target='_blank' class='btn btn-sm btn-info'><i class='ri-file-text-line'></i> Görüntüle</a>"))
                                </dd>

                                <dt class="col-sm-5">MTV2 Belgesi:</dt>
                                <dd class="col-sm-7">
                                    @(string.IsNullOrEmpty(Model.MTV2Belgesi) ? "Belirtilmemiş" : Html.Raw($"<a href='{Url.Content(Model.MTV2Belgesi)}' target='_blank' class='btn btn-sm btn-info'><i class='ri-file-text-line'></i> Görüntüle</a>"))
                                </dd>

                                <dt class="col-sm-5">MTV1 Ödendi:</dt>
                                <dd class="col-sm-7">@(Model.MTV1Odendi ? "Evet" : "Hayır")</dd>

                                <dt class="col-sm-5">MTV2 Ödendi:</dt>
                                <dd class="col-sm-7">@(Model.MTV2Odendi ? "Evet" : "Hayır")</dd>

                                <dt class="col-sm-5">Araç Bedeli:</dt>
                                <dd class="col-sm-7">@(Model.AracBedeli.HasValue ? $"{Model.AracBedeli.Value:N2} TL" : "Belirtilmemiş")</dd> @* Para birimi formatı *@

                                <dt class="col-sm-5">Araç Alış Fiyatı:</dt>
                                <dd class="col-sm-7">@(Model.AracAlisFiyati.HasValue ? $"{Model.AracAlisFiyati.Value:N2} TL" : "Belirtilmemiş")</dd> @* Para birimi formatı *@

                                <dt class="col-sm-5">Kabis Belgesi:</dt>
                                <dd class="col-sm-7">
                                    @(string.IsNullOrEmpty(Model.KabisBelgesi) ? "Belirtilmemiş" : Html.Raw($"<a href='{Url.Content(Model.KabisBelgesi)}' target='_blank' class='btn btn-sm btn-info'><i class='ri-file-text-line'></i> Görüntüle</a>"))
                                </dd>

                                <dt class="col-sm-5">Kabis Bitiş Tarihi:</dt>
                                <dd class="col-sm-7">@(Model.KabisBitisTarihi.HasValue ? Model.KabisBitisTarihi.Value.ToString("dd.MM.yyyy") : "Belirtilmemiş")</dd> @* Para birimi formatı *@
                           
                                <dt class="col-sm-5">Ruhsat Numarası:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.RuhsatNo)</dd>

                            </dl>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="cezalar" role="tabpanel" aria-labelledby="cezalar-tab">
                    @if (Model.Cezalar != null && Model.Cezalar.Any())
                    {
                        <div class="table-responsive">
                            @* Tabloyu duyarlı yap *@
                            <table class="table table-striped table-hover">
                                @* hover efekti ekleyelim *@
                                <thead>
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Tutar (TL)</th>
                                        <th>Yer</th>
                                        <th>Açıklama</th>
                                        <th>Tanım</th>
                                        <th>Ödendi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ceza in Model.Cezalar)
                                    {
                                        <tr>
                                            <td>@ceza.CezaTarihi.ToString("dd.MM.yyyy")</td>
                                            <td>@ceza.Tutar.ToString("N2")</td> @* Para birimi formatı *@
                                            <td>@(string.IsNullOrEmpty(ceza.CezaYeri) ? "Belirtilmemiş" : ceza.CezaYeri)</td>
                                            <td>@(string.IsNullOrEmpty(ceza.Aciklama) ? "Belirtilmemiş" : ceza.Aciklama)</td>
                                            <td>@(ceza.CezaTanimi != null ? ceza.CezaTanimi.KisaAciklama : "Belirtilmemiş")</td>
                                            <td>@(ceza.Odendi ? "Evet" : "Hayır")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">Bu araçla ilgili ceza bilgileri henüz eklenmemiş.</div> @* Daha belirgin bir mesaj *@
                    }
                </div>
                <div class="tab-pane fade" id="otoyolGecisler" role="tabpanel" aria-labelledby="otoyolGecisler-tab">
                    @if (Model.OtoyolGecisleri != null && Model.OtoyolGecisleri.Any())
                    {
                        <div class="table-responsive">
                            @* Tabloyu duyarlı yap *@
                            <table class="table table-striped table-hover">
                                @* hover efekti ekleyelim *@
                                <thead>
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Tutar (TL)</th>
                                        <th>Yer</th>
                                        <th>Açıklama</th>
                                        <th>Lokasyon</th>
                                        <th>Ödendi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var gecis in Model.OtoyolGecisleri)
                                    {
                                        <tr>
                                            <td>@gecis.GecisTarihi.ToString("dd.MM.yyyy")</td>
                                            <td>@gecis.Tutar.ToString("N2")</td> @* Para birimi formatı *@
                                            <td>@gecis.GecisYeri</td>
                                            <td>@(string.IsNullOrEmpty(gecis.Aciklama) ? "Belirtilmemiş" : gecis.Aciklama)</td>
                                            <td>@(gecis.Lokasyon != null ? gecis.Lokasyon.LokasyonAdi : "Belirtilmemiş")</td>
                                            <td>@(gecis.Odendi ? "Evet" : "Hayır")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">Bu araçla ilgili otoyol geçişi bilgileri henüz eklenmemiş.</div> @* Daha belirgin bir mesaj *@
                    }
                </div>
                <div class="tab-pane fade" id="gecmisMusteriler" role="tabpanel" aria-labelledby="gecmisMusteriler-tab">
                    @if (Model.Kiralamalar != null && Model.Kiralamalar.Any(k => k.BitisTarihi.HasValue))
                    {
                        <div class="table-responsive">
                            @* Tabloyu duyarlı yap *@
                            <table class="table table-striped table-hover">
                                @* hover efekti ekleyelim *@
                                <thead>
                                    <tr>
                                        <th>Kiralama ID</th>
                                        <th>Müşteri</th>
                                        <th>Başlangıç Tarihi</th>
                                        <th>Bitiş Tarihi</th>
                                        <th>Orijinal Lokasyon</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kiralama in Model.Kiralamalar.Where(k => k.BitisTarihi.HasValue))
                                    {
                                        <tr>
                                            <td>@kiralama.KiralamaID</td>
                                            <td>@(kiralama.Musteri != null ? $"{kiralama.Musteri.DEFINITION_} " : "Belirtilmemiş")</td>
                                            <td>@kiralama.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                                            <td>@kiralama.BitisTarihi.Value.ToString("dd.MM.yyyy")</td>
                                            <td>@(string.IsNullOrEmpty(kiralama.OriginalLokasyonAdi) ? "Belirtilmemiş" : kiralama.OriginalLokasyonAdi)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">Bu aracın geçmiş müşterileri henüz eklenmemiş.</div> @* Daha belirgin bir mesaj *@
                    }
                </div>
                <div class="tab-pane fade" id="guncelle" role="tabpanel" aria-labelledby="guncelle-tab">
                    <form asp-action="UpdateVehicle" asp-controller="Vehicles" method="post" enctype="multipart/form-data" id="updateVehicleForm" novalidate>
                        <input type="hidden" asp-for="AracID" id="vehicleAracId" name="AracID" data-val="true"/>
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Plaka" class="form-label">Plaka</label>
                                    <input asp-for="Plaka" class="form-control" />
                                    <span asp-validation-for="Plaka" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SaseNo" class="form-label">Şasi No</label>
                                    <input asp-for="SaseNo" class="form-control" />
                                    <span asp-validation-for="SaseNo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Marka" class="form-label">Marka</label>
                                    <input asp-for="Marka" class="form-control" />
                                    <span asp-validation-for="Marka" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Model" class="form-label">Model</label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Aciklama" class="form-label">Açıklama</label>
                                    <input asp-for="Aciklama" class="form-control" />
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ModelYili" class="form-label">Model Yılı</label>
                                    <input asp-for="ModelYili" class="form-control" />
                                    <span asp-validation-for="ModelYili" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TescilTarihi" class="form-label">Tescil Tarihi</label>
                                    <input asp-for="TescilTarihi" class="form-control" type="date" />
                                    <span asp-validation-for="TescilTarihi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TrafikBaslangicTarihi" class="form-label">Trafik Başlangıç</label>
                                    <input asp-for="TrafikBaslangicTarihi" class="form-control" type="date" />
                                    <span asp-validation-for="TrafikBaslangicTarihi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TrafikBitisTarihi" class="form-label">Trafik Bitiş</label>
                                    <input asp-for="TrafikBitisTarihi" class="form-control" type="date" />
                                    <span asp-validation-for="TrafikBitisTarihi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TrafikBelgesi" class="form-label">Trafik Belgesi</label>
                                    <input asp-for="TrafikBelgesi" class="form-control" type="file" />
                                    <span asp-validation-for="TrafikBelgesi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="YakitTipi" class="form-label">Yakıt Tipi</label>
                                    <input asp-for="YakitTipi" class="form-control" />
                                    <span asp-validation-for="YakitTipi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="VitesTipi" class="form-label">Vites Tipi</label>
                                    <input asp-for="VitesTipi" class="form-control" />
                                    <span asp-validation-for="VitesTipi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="KMBilgi" class="form-label">Kilometre Bilgi</label>
                                    <input asp-for="KMBilgi" class="form-control" type="number" />
                                    <span asp-validation-for="KMBilgi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AracTipiID" class="form-label">Araç Tipi</label>
                                    <select asp-for="AracTipiID" class="form-control" asp-items="@(new SelectList(ViewBag.AracTipiTanimi ?? new List<AracTipiTanimi>(), "AracTipiID", "AracTipiName"))">
                                        <option value="">Seçiniz</option>
                                    </select>
                                    <span asp-validation-for="AracTipiID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="HizmetKodu" class="form-label">Hizmet Kodu</label>
                                    <input asp-for="HizmetKodu" class="form-control" />
                                    <span asp-validation-for="HizmetKodu" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="KabisID" class="form-label">KABIS ID</label>
                                    <input asp-for="KabisID" class="form-control" type="text" />
                                    <span asp-validation-for="KabisID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="KabisGirisTarihi" class="form-label">KABIS Giriş Tarihi</label>
                                    <input asp-for="KabisGirisTarihi" class="form-control" type="date" />
                                    <span asp-validation-for="KabisGirisTarihi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CekisTipi" class="form-label">Çekiş Tipi</label>
                                    <input asp-for="CekisTipi" class="form-control" />
                                    <span asp-validation-for="CekisTipi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Renk" class="form-label">Renk</label>
                                    <input asp-for="Renk" class="form-control" />
                                    <span asp-validation-for="Renk" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MotorGucu" class="form-label">Motor Gücü</label>
                                    <input asp-for="MotorGucu" class="form-control" />
                                    <span asp-validation-for="MotorGucu" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="KiralamaBedeli" class="form-label">Kiralama Bedeli</label>
                                    <input asp-for="KiralamaBedeli" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="KiralamaBedeli" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Durum" class="form-label">Durum</label>
                                    <input asp-for="Durum" class="form-control" />
                                    <span asp-validation-for="Durum" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LokasyonID" class="form-label">Lokasyon</label>
                                    <select asp-for="LokasyonID" class="form-control" asp-items="@(new SelectList(ViewBag.Lokasyonlar ?? new List<Lokasyon>(), "LokasyonID", "LokasyonAdi"))">
                                        <option value="">Seçiniz</option>
                                    </select>
                                    <span asp-validation-for="LokasyonID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AracBedeli" class="form-label">Araç Bedeli</label>
                                    <input asp-for="AracBedeli" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="AracBedeli" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AracAlisFiyati" class="form-label">Araç Alış Fiyatı</label>
                                    <input asp-for="AracAlisFiyati" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="AracAlisFiyati" class="text-danger"></span>
                                </div>
                                <div class="form-group">
