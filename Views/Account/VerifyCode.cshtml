@{
    Layout = string.Empty;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>RMS - Doğrulama Kodu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />
    <style>
        .auth-form .btn-container {
            display: flex;
            gap: 1rem; /* Butonlar arasında boşluk */
            flex-wrap: wrap; /* Mobil cihazlarda alt alta geçsin */
        }

        .auth-form .btn {
            min-width: 120px; /* Butonlar için minimum genişlik */
        }

        .alert-container {
            margin-top: 1rem;
        }
    </style>
</head>
<body class="account-body accountbg">
    <div class="container">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a href="index.html" class="logo logo-admin">
                                        <img src="~/images/logo-sm-dark.png" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Doğrulama Kodu Girin</h4>
                                    <p class="text-muted mb-0">Telefonunuza gönderilen doğrulama kodunu girin.</p>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="tab-content">
                                    <div class="tab-pane active p-3" role="tabpanel">
                                        <form class="form-horizontal auth-form" id="verifyCodeForm" method="post" action="@Url.Action("VerifyCode", "Account")">
                                            @Html.AntiForgeryToken()
                                            <div class="form-group mb-2">
                                                <label class="form-label" for="code">Doğrulama Kodu</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" name="code" id="code" placeholder="Doğrulama kodunu girin">
                                                </div>
                                                <span class="text-danger" id="code-error"></span>
                                            </div>
                                            <div class="form-group mb-0 row">
                                                <div class="col-12">
                                                    <div class="btn-container">
                                                        <button class="btn btn-primary" type="submit">Onayla <i class="fas fa-check ms-1"></i></button>
                                                        <button type="button" class="btn btn-secondary" id="resendCodeButton">Yeni Kod Gönder</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="alert alert-danger alert-container d-none" id="message"></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body bg-light-alt text-center">
                                <span class="text-muted d-none d-sm-inline-block"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/waves.js"></script>
    <script src="~/js/feather.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
    <script>
        $(document).ready(function () {
            // Form gönderimi
            $('#verifyCodeForm').on('submit', function (e) {
                e.preventDefault();
                $('#message').addClass('d-none').text('');
                $('#code-error').text('');

                $.ajax({
                    url: '@Url.Action("VerifyCode", "Account")',
                    type: 'POST',
                    data: $(this).serialize(),
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function (response) {
                        if (response.success) {
                            $('#message').removeClass('d-none').addClass('alert-success').removeClass('alert-danger').text(response.message);
                            setTimeout(function () { window.location.href = response.redirectUrl; }, 2000);
                        } else {
                            $('#message').removeClass('d-none').addClass('alert-danger').removeClass('alert-success').text(response.message);
                            if (response.errors) {
                                $.each(response.errors, function (key, errors) {
                                    $(`#${key.toLowerCase()}-error`).text(errors.join(', '));
                                });
                            }
                        }
                    },
                    error: function (xhr) {
                        $('#message').removeClass('d-none').addClass('alert-danger').removeClass('alert-success').text('Hata oluştu: ' + (xhr.responseJSON?.message || 'Sunucu hatası'));
                    }
                });
            });

            // Yeni Kod Gönder butonu
            $('#resendCodeButton').click(function () {
                $('#message').addClass('d-none').text('');
                $.ajax({
                    url: '@Url.Action("ResendVerificationCode", "Account")',
                    type: 'POST',
                    data: {
                        '__RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#message').removeClass('d-none').addClass('alert-success').removeClass('alert-danger').text(response.message);
                        } else {
                            $('#message').removeClass('d-none').addClass('alert-danger').removeClass('alert-success').text(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#message').removeClass('d-none').addClass('alert-danger').removeClass('alert-success').text('Hata oluştu: ' + (xhr.responseJSON?.message || error));
                    }
                });
            });
        });
    </script>
</body>
</html>